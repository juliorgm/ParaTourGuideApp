<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="titulo_lista">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/titulo</item>
    </style>

    <style name="descricao">
        <item name="android:textColor">@color/texto</item>
        <item name="android:textSize">@dimen/descricao</item>
    </style>
    <style name="item_local">
        <item name="android:background">@drawable/fundo_item</item>
        <item name="android:padding">@dimen/paddin_padrao</item>
        <item name="android:layout_margin">@dimen/margem_padrao</item>
    </style>


</resources>
